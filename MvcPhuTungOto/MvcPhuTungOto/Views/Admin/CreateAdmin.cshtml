@{
    ViewBag.Title = "Thêm Administrator";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    .auto-Left {
        color: #141414;
        text-align: right;
        padding-top: 22px;
    }

    .auto-Right {
        width: 700px;
        padding-top: 22px;
        padding-left: 10px;
    }

    .Hinh {
        border-radius: 50%;
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        border-bottom-right-radius: 50%;
        border-bottom-left-radius: 50%;
        border: 3px solid #c7b89e;
    }

    .textCtrl, .number_ne {
        width: 500px;
    }
</style>

@*roadlinktop*@
<ul class="roadlinktop">
    <li>
        <a href="/Admin">
            <img src="~/Content/Admin/Images/ico_adminhome.png" />
        </a>
    </li>
    <li>
        <a href="/Admin/ListAdmin">
            <span>Quản trị Administrator</span>
        </a>
    </li>
</ul>


<div class="title_ne1">THÊM QUẢN TRỊ WEBSITE</div>
@using (Html.BeginForm("CreateAdmin", "Admin", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    <table style="width: 984px; border: 1px solid #d0d0d0; border-collapse: collapse;">
        <tr>
            <td class="auto-Left">Tên Đăng nhập:</td>
            <td class="auto-Right">
                <input type="text" id="txt_Username" name="txt_Username" class="textCtrl" required="required" maxlength="30" pattern="[A-Za-z0-9]{6,30}" title="Tên đăng nhập tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Mật khẩu:</td>
            <td class="auto-Right">
                <input type="password" id="txt_Password" name="txt_Password" class="textCtrl" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Nhập lại mật khẩu:</td>
            <td class="auto-Right">
                <input type="password" id="txt_NhapLaiPass" name="txt_NhapLaiPass" class="textCtrl" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu nhập lại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="Xen_Form_Ne"></div>
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Hình đại diện:</td>
            <td class="auto-Right">
                <img id="img_HinhDD" class="Hinh" style="vertical-align: middle; width: 160px; height: 160px" src="~/Content/Images/Upload/Avatar_Admin.jpg" />
                <input type="file" id="_FileUpload" name="_FileUpload" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Email:</td>
            <td class="auto-Right">
                <input type="email" id="txt_Email" name="txt_Email" class="textCtrl" placeholder="ex: DaoAnhDung@Gmail.com" required="required" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Họ tên:</td>
            <td class="auto-Right">
                <input type="text" id="txt_HoTen" name="txt_HoTen" class="textCtrl" required="required" maxlength="30" pattern="^[^\u0021-\u0026\u0028-\u002C\u002E-\u0040\u005B-\u0060\u007B-\u007F\u0080-\u009F\u00A1-\u00BF\u00D7\u00F7\u2014-\u2018\u2020-\u206F]+$" title="Họ tên chỉ được nhập chữ !" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Địa chỉ:</td>
            <td class="auto-Right">
                <input type="text" id="txt_DiaChi" name="txt_DiaChi" class="textCtrl" required="required" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Điện thoại:</td>
            <td class="auto-Right">
                <input type="text" id="txt_DienThoai" name="txt_DienThoai" class="number_ne" maxlength="11" required="required" pattern="[0-9]{10,11}" title="Vui lòng nhập số điện thoại đúng định dạng 10-11 số !" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Số chứng minh thư:</td>
            <td class="auto-Right">
                <input type="text" id="txt_Cmnd" name="txt_Cmnd" class="number_ne" maxlength="9" required="required" pattern="[0-9]{9}" title="Vui lòng nhập đúng định dạng số CMND 9 số !" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Ngày sinh:</td>
            <td class="auto-Right">
                <input type="text" id="txt_Ngay" name="txt_Ngay" placeholder="Ngày" class="number_ne" maxlength="2" style="width: 60px" required="required" />
                <input list="_List" id="dl_Thang" name="dl_Thang" placeholder="Tháng" class="number_ne" maxlength="2" style="width: 60px;" required="required" />
                <datalist id="_List">
                    <option value="1"></option>
                    <option value="2"></option>
                    <option value="3"></option>
                    <option value="4"></option>
                    <option value="5"></option>
                    <option value="6"></option>
                    <option value="7"></option>
                    <option value="8"></option>
                    <option value="9"></option>
                    <option value="10"></option>
                    <option value="11"></option>
                    <option value="12"></option>
                </datalist>
                <input type="text" id="txt_Nam" name="txt_Nam" placeholder="Năm" class="number_ne" maxlength="4" style="width: 60px" required="required" />
            </td>
        </tr>
        <tr>
            <td class="auto-Left">Giới tính:</td>
            <td class="auto-Right">
                <select id="sl_GioiTinh" name="sl_GioiTinh" class="textCtrl" style="width: 60px">
                    <option value="0">Nữ</option>
                    <option value="1" selected="selected">Nam</option>
                </select>
            </td>
        </tr>
        <tr>
            <td colspan="2">
                <div class="Xen_Form_Ne"></div>
            </td>
        </tr>
        <tr>
            <td class="auto-Left" style="padding: 0">Phân quyền quản trị:</td>
            <td class="auto-Right">
                <table style="width: 550px">
                    <tr style="text-align: left">
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen1" checked="checked" />Menu</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen2" checked="checked" />Slider</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen3" checked="checked" />Nhà sản xuất</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen4" checked="checked" />Sản phẩm</label>
                        </th>
                    </tr>
                    <tr style="text-align: left;height:40px">
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen5" checked="checked" />Khách hàng</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen6" checked="checked" />Đơn hàng</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen7" checked="checked" />Tin tức</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen8" checked="checked" />Quảng cáo</label>
                        </th>
                    </tr>
                    <tr style="text-align: left">
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen9" checked="checked" />Liên hệ</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen10" checked="checked" />Giới thiệu</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen11" checked="checked" />Quản trị Administrator</label>
                        </th>
                        <th style="font-weight: normal">
                            <label>
                                <input type="checkbox" value="DaChon" name="ckb_PhanQuyen12" checked="checked" />Site map</label>
                        </th>
                    </tr>
                </table>
            </td>
        </tr>
    </table>
    <div style="text-align: center">
        <input type="reset" class="button_ne" value=" Nhập lại " />
        <input type="submit" class="button_ne" value=" Đăng ký " />
    </div>
}
