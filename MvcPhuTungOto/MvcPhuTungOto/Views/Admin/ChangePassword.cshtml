@model MvcMobileStore.Models.Admin

@{
    ViewBag.Title = "ChangePassword | Đổi Mật Khẩu";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<style type="text/css">
    .auto-Left {
        color: #141414;
        text-align: right;
        padding-top: 22px;
    }

    .auto-Right {
        width: 560px;
        padding-top: 22px;
        padding-left: 10px;
    }
</style>

@*roadlinktop*@
<ul class="roadlinktop">
    <li>
        <a href="/Admin">
            <img src="~/Content/Admin/Images/ico_adminhome.png" />
        </a>
    </li>
    <li>
        <a href="/Admin/ChangePassword">
            <span>Đổi mật khẩu tin quản trị</span>
        </a>
    </li>
</ul>

@*Phần Đổi MK*@
@using (Html.BeginForm())
{
    <div class="show" style="padding: 10px 20px">
        <table style="width: 700px;">
            <tr>
                <td class="auto-Left" style="padding-top: 10px">Mật khẩu hiện tại của bạn:</td>
                <td class="auto-Right">
                    <input type="password" id="txt_Password" name="txt_Password" class="textCtrl" style="width:400px" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu hiện tại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !"/>
                    <br />
                    <div style="color: #999; font-style: italic; line-height: 15px; font-size: 11px;">Vì sự an toàn, bạn cần phải gõ lại mật khẩu hiện tại trước khi bạn đặt mật khẩu mới.</div>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="Xen_Form_Ne"></div>
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Mật khẩu mới:</td>
                <td class="auto-Right">
                    <input type="password" id="txt_PasswordNew" name="txt_PasswordNew" class="textCtrl" style="width:400px" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu mới của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Nhập lại mật khẩu mới:</td>
                <td class="auto-Right">
                    <input type="password" id="txt_NhapLaiPass" name="txt_NhapLaiPass" class="textCtrl" style="width:400px" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu nhập lại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="Xen_Form_Ne"></div>
                </td>
            </tr>
            <tr>
                <td colspan="2" style="text-align: center">
                    <input id="NhapLai" type="reset" value="Nhập lại" class="button_ne" />
                    <input type="submit" id="btn_Sumit" name="btn_Sumit" value="Lưu chỉnh sửa" class="button_ne" />
                </td>
            </tr>
        </table>
    </div>
    <div class="footer-shadow"></div>
}
