@model MvcMobileStore.Models.KhachHang

@{
    ViewBag.Title = "Register | Đăng Ký";
    Layout = "~/Views/Shared/_LayoutMasterPage_DangKy.cshtml";
}

<style type="text/css">
    .auto-Left {
        color: #141414;
        text-align: right;
        padding-top: 22px;
    }

    .auto-Right {
        width: 510px;
        padding-top: 22px;
        padding-left: 10px;
    }

    .Hinh {
        border-radius: 50%;
        border-top-left-radius: 50%;
        border-top-right-radius: 50%;
        border-bottom-right-radius: 50%;
        border-bottom-left-radius: 50%;
        border: 3px solid #c7b89e;
    }

    /* MotionCAPTCHA canvas */
    #mc-canvas {
        padding: 1px;
        display: block;
        border: 4px solid #e6e6e6;
        -webkit-border-radius: 4px;
        -moz-border-radius: 4px;
        border-radius: 4px;
    }
        /* Red border when invalid */
        #mc-canvas.mc-invalid {
            border: 4px solid #aa4444;
        }
        /* Green border when valid */
        #mc-canvas.mc-valid {
            border: 4px solid #44aa44;
        }
</style>

<link href="~/Content/Capcha.css" rel="stylesheet" />
<script src="~/Scripts/Capcha.js"></script>

<script>
    $(document).ready(function () {

        $('#mycoolform').motionCaptcha({
            //Đoạn này đã xóa sự kiện Acction nè 

            //divId: '#mc',                // if you use an ID other than '#mc' for the placeholder, pass it in here
            //cssClass: '.mc-active',      // this CSS class is applied to the 'mc' div when the plugin is active
            canvasId: '#mc-canvas',      // the ID of the MotionCAPTCHA canvas element
            shapes: ['triangle', 'x', 'rectangle', 'circle', 'check', 'caret', 'zigzag', 'arrow', 'leftbracket', 'rightbracket', 'v', 'delete', 'star', 'pigtail'],
            // These messages are displayed inside the canvas after a user finishes drawing:
            errorMsg: 'Sai rồi, làm lại nhé.',
            successMsg: 'Chính xác!',

            // This message is displayed if the user's browser doesn't support canvas:
            noCanvasMsg: "Trình duyệt của bạn không hỗ trợ <canvas> - nên dùng Chrome, FF4, Safari hoặc IE9.",
        });
    });
</script>

@*Phần breadcrumbs*@
<ul id="breadcrumbs-one" style="margin: 0">
    <li><a href="/Home">
        <img src="~/Content/Images/home.png" style="vertical-align: top" />&nbsp; Trang chủ</a></li>
    <li><a class="current">Đăng ký tài khoản</a></li>
</ul>

@*Phần Thông Tin Cá Nhân*@
@using (Html.BeginForm("Register", "Home", FormMethod.Post, new { enctype = "multipart/form-data", @id = "mycoolform" }))
{
    <div class="show" style="padding: 20px;">
        <table style="width: 700px;">
            <tr>
                <td class="auto-Left">Tên Đăng nhập:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_Username" name="txt_Username" class="textCtrl" required="required" maxlength="30" pattern="[A-Za-z0-9]{6,30}" title="Tên đăng nhập tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Mật khẩu:</td>
                <td class="auto-Right">
                    <input type="password" id="txt_Password" name="txt_Password" class="textCtrl" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Nhập lại mật khẩu:</td>
                <td class="auto-Right">
                    <input type="password" id="txt_NhapLaiPass" name="txt_NhapLaiPass" class="textCtrl" required="required" pattern="[A-Za-z0-9]{6,30}" title="Mật khẩu nhập lại của bạn tối thiểu có 6 ký tự và không được nhập ký tự đặc biệt !"/>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="Xen_Form_Ne"></div>
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Hình đại diện:</td>
                <td class="auto-Right">
                    <img id="img_HinhDD" class="Hinh" style="vertical-align: middle; width: 160px; height: 160px" src="~/Content/Images/Upload/avatar.jpg" />
                    <input type="file" id="_FileUpload" name="_FileUpload" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Email:</td>
                <td class="auto-Right">
                    <input type="email" id="txt_Email" name="txt_Email" class="textCtrl" placeholder="ex: DaoAnhDung@Gmail.com" required="required" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Họ tên:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_HoTen" name="txt_HoTen" class="textCtrl" required="required" maxlength="30" pattern="^[^\u0021-\u0026\u0028-\u002C\u002E-\u0040\u005B-\u0060\u007B-\u007F\u0080-\u009F\u00A1-\u00BF\u00D7\u00F7\u2014-\u2018\u2020-\u206F]+$" title="Họ tên chỉ được nhập chữ !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Địa chỉ:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_DiaChi" name="txt_DiaChi" class="textCtrl" required="required" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Điện thoại:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_DienThoai" name="txt_DienThoai" class="number_ne" maxlength="11" required="required" pattern="[0-9]{10,11}" title="Vui lòng nhập số điện thoại đúng định dạng 10-11 số !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Số chứng minh thư:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_Cmnd" name="txt_Cmnd" class="number_ne" maxlength="9" required="required" pattern="[0-9]{9}" title="Vui lòng nhập đúng định dạng số CMND 9 số !" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Ngày sinh:</td>
                <td class="auto-Right">
                    <input type="text" id="txt_Ngay" name="txt_Ngay" placeholder="Ngày" class="number_ne" maxlength="2" style="width: 60px" required="required" />
                    <input list="_List" id="dl_Thang" name="dl_Thang" placeholder="Tháng" class="number_ne" maxlength="2" style="width: 60px;" required="required"/>
                    <datalist id="_List">
                        <option value="1"></option>
                        <option value="2"></option>
                        <option value="3"></option>
                        <option value="4"></option>
                        <option value="5"></option>
                        <option value="6"></option>
                        <option value="7"></option>
                        <option value="8"></option>
                        <option value="9"></option>
                        <option value="10"></option>
                        <option value="11"></option>
                        <option value="12"></option>
                    </datalist>
                    <input type="text" id="txt_Nam" name="txt_Nam" placeholder="Năm" class="number_ne" maxlength="4" style="width: 60px" required="required" />
                </td>
            </tr>
            <tr>
                <td class="auto-Left">Giới tính:</td>
                <td class="auto-Right">
                    <select id="sl_GioiTinh" name="sl_GioiTinh" class="textCtrl" style="width: 60px">
                        <option value="0">Nữ</option>
                        <option value="1" selected="selected">Nam</option>
                    </select>
                </td>
            </tr>
            <tr>
                <td colspan="2">
                    <div class="Xen_Form_Ne"></div>
                </td>
            </tr>
            <tr>
                <td class="auto-Left" style="padding: 0">Xác thực:</td>
                <td class="auto-Right">
                    @*<form id="mycoolform" method="get">*@
                    <div id="mc">
                        <a onclick="window.location.reload()" title="Click để đổi hình" style="margin-left: 70px; cursor: pointer">Đổi hình khác</a>
                        <canvas id="mc-canvas" title="Vẽ đè lên hình trong ô này để xác thực"></canvas>
                    </div>
                    <br />
                    <input id="NhapLai" type="reset" value=" Nhập lại " class="btn_Ne" style="margin: 0 20px 0px 50px" />
                    <input type="submit" disabled="disabled" class="btn_Ne" value=" Đăng ký " id="btn_DangKy" />
                    @* </form>*@
                </td>
            </tr>
        </table>
    </div>
    <div class="footer-shadow"></div>
}
